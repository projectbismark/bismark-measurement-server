#!/bin/sh

# bismark-mserver reverse traceroute (RTR)

set -o nounset
set -o errexit

# Load configuration
. /etc/bismark-mserver.conf

start_socat()
# $1 is port number, $2 is 'echopid'
{
    if [ "$1" -lt 1024 ] && [ "$(id -ru)" -ne 0 ]; then
        echo "Sorry, $0 can't bind to ports < 1024. Terminating."
        exit 1
    fi

    socat -4 -T INACTIVITY_TIMEOUT TCP-LISTEN:$1,fork,reuseaddr \
            EXEC:"$0 exec",pipes > /dev/null 2>&1 &

    if [ "$2" = 'echopid' ]; then
        echo $!
    fi
    exit 0
}

if [ -z ${1:-} ]; then
    start_socat $RTR_PORT 'noechopid'
fi

case "$1" in
echopid)
    start_socat $RTR_PORT 'echopid'
    ;;
exec)
    # Parse standard input piped from socat (and the remote router)
    # and select traceroute type based on first word
    read type rest
    case $type in
    ICMP)
        sudo traceroute -n -q1 -I $SOCAT_PEERADDR
        ;;
    UDP)
        traceroute -n -q1 $SOCAT_PEERADDR
        ;;
    TCP)
        sudo traceroute -n -q1 -T $SOCAT_PEERADDR
        ;;
    *)
        exit 2
        ;;
    esac
    ;;
*)
    echo "Usage: $0 [echopid]"
    exit 1
    ;;
esac

